<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products</title>
    <link
      href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="/styles/nav.css" />
    <link rel="stylesheet" href="/styles/products.css" />
    <script src="/script/products.js" defer></script>
  </head>
  <body>
    <%- include('./navbar.ejs', { links, cart, login, logout, checkout }) %>
    <main>
      <section class="page-hero">
        <div class="section-center">
          <h3><a href="/">Home </a>/ Products</h3>
        </div>
      </section>
      <div class="page">
        <div class="section-center products">
          <section>
            <div class="content">
              <form>
                <div class="form-control">
                  <input
                    type="text"
                    name="text"
                    placeholder="search"
                    class="search-input"
                  />
                </div>
                <div class="form-control">
                  <h5>category</h5>
                  <div>
                    <button type="button" name="category">all</button>
                    <% for(let i = 0; i < categories.length; i++) { %>
                    <button
                      type="button"
                      name="category"
                      id="<%= categories[i].id %>"
                    >
                      <%= categories[i].name %>
                    </button>
                    <% } %>
                  </div>
                </div>
                <div class="form-control">
                  <h5>company</h5>
                  <select name="company" class="company">
                    <option value="">all</option>
                    <% for(let i = 0; i < companies.length; i++) { %>
                    <option value="<%= companies[i].id %>">
                      <%= companies[i].name %>
                    </option>
                    <% } %>
                  </select>
                </div>
                <div class="form-control">
                  <h5>price</h5>
                  <p class="price"></p>
                  <input
                    type="range"
                    name="price"
                    min="0"
                    step="0.01"
                    max="<%= max.max %>"
                    value="<%= max.max %>"
                  />
                </div>
              </form>
              <button type="button" class="clear-btn">clear filters</button>
            </div>
          </section>
          <div>
            <section class="sort-section">
              <div class="btn-container">
                <button type="button"><i class="bx bxs-grid"></i></button>
                <button type="button"><i class="bx bx-menu"></i></button>
              </div>
              <p class="total"></p>
              <hr />
              <form>
                <label for="sort">sort by</label>
                <select name="sort" id="sort" class="sort-input">
                  <option value="price-lowest">price (lowest)</option>
                  <option value="price-highest">price (highest)</option>
                  <option value="name-a">name (a - z)</option>
                  <option value="name-z">name (z - a)</option>
                </select>
              </form>
            </section>
          </div>
        </div>
      </div>
    </main>
    <%- include('./footer.ejs') %>
  </body>
</html>
